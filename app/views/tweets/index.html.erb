<div class="container">
	<div class="row">
		<div class="col-md-3 user-info">
			<div class="row">
				<%= link_to image_tag current_user.image.url(:medium), class: "medium-image" %>
			</div>

			<div class="row">
				<div class="col-md-4">

					<!-- <!% if current_user.image.exists? %> -->
						<%= link_to image_tag current_user.image.url(:thumb), class: "thumb-image-home" %>
					<!-- <!% else %> -->
						<!-- <!%= form_for current_user, html: { multipart: true } do |f| %>
							<!%= f.file_field :image %>
							<!%= f.submit %>
						<!% end %> -->
					<!-- <!% end %> -->

				</div>
				<div class="col-md-8" id="user-info-user-name">
					<h4><strong><%= link_to current_user.fullname, user_path(current_user)  %></strong></h4>
					<h6><%= link_to current_user.username, user_path(current_user)  %></h6>
				</div>
			</div>
			
			<div class="row" id="user-info-stats">
				<div class="col-md-4">
					<span><%= link_to 'TWEETS', user_path(), class: "info-bar-link" %></span>
					<h4><%= current_user.tweets.count %></h4>
				</div>
				<div class="col-md-4">
					<span><%= link_to 'FOLLOWING', show_following_path(), class: "info-bar-link" %></span>
					<h4><%= current_user.follows.count %></h4>
				</div>
				<div class="col-md-4">
					<span><%= link_to 'FOLLOWERS', show_followers_path(), class: "info-bar-link" %></span>
					<h4><%= current_user.followers.count %></h4>
				</div>
			</div>
		</div>

		<div class="col-md-6 feed">
			<div class="row">
				<%= render 'form' %>
			</div>
			<div class="row">
				<% @tweets.each do |tweet| %>
					<h6><strong><%= tweet.user.fullname %></strong> <%= tweet.user.username %> <%= time_ago_in_words(tweet.created_at) %> ago</h6>
						<p><%= tweet.body %></p>
				<% end %>
			</div>
		</div>

	</div>
</div>