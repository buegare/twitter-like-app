<div class="row">
	<div class="col-md-3 user-info">
		<div class="row">
			<div class="col-md-4">
			</div>
			<div class="col-md-8">
				<h4><%= current_user.fullname %></h4>
				<h6><%= current_user.username %></h6>
			</div>
		</div>
		<div class="row">
			<div class="col-md-4 left-menu-info">
				<h4>Tweets</h4>
				<h5><%= @mytweets.count %></h5>
			</div>
			<div class="col-md-4 left-menu-info">
				<h4>Following</h4>
				<h5><%= @follows.count %></h5>
			</div>
			<div class="col-md-4 left-menu-info">
				<h4>Followers</h4>
				<h5><%= @followers.count %></h5>
			</div>
		</div>
	</div>

	<div class="col-md-6 feed">
		<% @tweets.each do |tweet| %>
			<h6><strong><%= tweet.user.fullname %></strong> <%= tweet.user.username %> <%= time_ago_in_words(tweet.created_at) %> ago</h6>
				<p><%= tweet.body %></p>
		<% end %>
	</div>

	<div class="col-md-3">
			<p>placeholder</p>
	</div>
</div>