<div class="row">
	<div class="col-xs-12">
		<%= form_for(@tweet, :html => { class: 'form-horizontal', role: 'form' }) do |f| %>
			<div class="form-group">	
				<div class="control-label col-sm-2">
					<%= f.label :title %><br>
				</div>
				<div class="col-sm-8">    
				    <%= f.text_field :title, class: 'form-control', placeholder: 'Title of tweet', autofocus: true %>
		    	</div>
		    </div>
		    
		    <div class="form-group">	
				<div class="control-label col-sm-2">
					<%= f.label :body %><br>
				</div>
				<div class="col-sm-8">    
				    <%= f.text_area :body, rows: 10, class: 'form-control', placeholder: 'Body of tweet' %>
		    	</div>
		    </div>
		    
		    
		    <div class='form-group'>
		    	<div class="col-sm-offset-2 col-sm-10">
		    		<%= f.submit class: 'btn btn-primary btn-lg'%>
		    	</div>
		    </div>
		    
		<% end %>
		
	</div>
</div>